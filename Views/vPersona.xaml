<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ednavarrT5.Views.vPersona"
             Title="vPersona">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">

        <Label 
            Text="SEMANA 5 BASE DE DATOS LOCALES SQLITE!"
            VerticalOptions="Center" 
            FontSize="18"
            TextColor="Blue"
            HorizontalOptions="Center" />

        <Entry x:Name="txtNombre" Placeholder="Ingresa el nombre"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnAgregar"
                    Text="Agregar Persona"
                    Clicked="btnAgregar_Clicked"
                    Grid.Row="0"
                    Grid.Column="0"/>
            <Label x:Name="lblMensaje"
                     Grid.Row="1"
                     Grid.Column="0"/>
            <Button x:Name="btnListar"
                    Text="Listar Personas"
                    Clicked="btnListar_Clicked"
                    Grid.Row="2"
                    Grid.Column="0"/>
            <CollectionView x:Name="ListaPersonas"
                            Grid.Row="4"
                            Grid.Column="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Id}"
                                   Grid.Row="0"
                                   Grid.Column="0"/>
                            <Label Text="{Binding Nombre}"
                                      Grid.Row="0"
                                      Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>



    </VerticalStackLayout>
</ContentPage>